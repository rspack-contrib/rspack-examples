{
  "compilerOptions": {
    // for shadcn/ui below
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // for shadcn/ui above
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
