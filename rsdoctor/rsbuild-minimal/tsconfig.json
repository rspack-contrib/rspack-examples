{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "module": "ES2020",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base"
}
